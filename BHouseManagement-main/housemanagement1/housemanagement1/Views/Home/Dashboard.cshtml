﻿@model IEnumerable<housemanagement1.CustomerAccount>

@{
    ViewBag.Title = "Rooms";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-image: url('../../Contents/img/hrhr.jpg');
            background-size: cover;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
            position: relative;
            
        }

        .room-slider {
            display: flex;
            overflow-x: auto;
            /*scroll-snap-type: x mandatory;*/
        }

        .room-card {
            flex: 0 0 auto;
            width: 300px;
            margin-right: 20px;
            /*scroll-snap-align: start;*/
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .room-image {
            width: 100%;
            height: 200px;
            background-color: #ccc;
            background-size: cover;
            background-position: center;
        }

        .room-details {
            padding: 20px;
        }

        .room-title {
            font-size: 24px;
            margin-bottom: 10px;
        }

        .room-description {
            color: #666;
        }

        .room-price {
            font-size: 18px;
            font-weight: bold;
            color: #333;
            margin-top: 10px;
        }

        .reserve-button {
            background-color: #007bff;
            color: #fff;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

            .reserve-button:hover {
                background-color: #0056b3;
            }

        .status {
            background-color: #28a745;
            color: #fff;
            padding: 5px 10px;
            border-radius: 5px;
        }

        .unavailable {
            background-color: #dc3545;
        }

        .arrow-button {
            position: absolute;
            top: 50%;
            transform: translateY(-50%);
            background: rgba(255, 255, 255, 0.7);
            border: none;
            color: #333;
            font-size: 20px;
            padding: 10px;
            cursor: pointer;
            border-radius: 50%;
            transition: background-color 0.3s;
        }

            .arrow-button:hover {
                background-color: rgba(0, 0, 0, 0.1);
            }

        .prev-button {
            left: 10px;
        }

        .next-button {
            right: 10px;
        }

        .reservation-form {
            display: none;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            margin-top: 10px;
        }

            .reservation-form label {
                display: block;
                margin-bottom: 5px;
                font-weight: bold;
            }

            .reservation-form input[type="text"],
            .reservation-form input[type="date"] {
                width: calc(100% - 12px);
                padding: 5px;
                margin-bottom: 10px;
                border: 1px solid #ccc;
                border-radius: 5px;
            }

            .reservation-form input[type="submit"] {
                background-color: #007bff;
                color: #fff;
                border: none;
                padding: 10px 20px;
                border-radius: 5px;
                cursor: pointer;
                transition: background-color 0.3s;
            }

                .reservation-form input[type="submit"]:hover {
                    background-color: #0056b3;
                }


        .reserve-input {
            display: none;
        }

            .reserve-input:checked ~ .reservation-form {
                display: block;
            }


            .reserve-input:checked ~ .room-details .status {
                background-color: #dc3545;
            }

                .reserve-input:checked ~ .room-details .status:after {
                    content: "Unavailable";
                }

                /* Button styling */
        .btn-logout {
            position: absolute;
            top: 20px; /* Adjust the distance from the top */
            right: 20px; /* Adjust the distance from the right */
            padding: 10px 20px;
            background-color: #007bff;
            color: white;
            text-decoration: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s;
            z-index: 999; /* Ensure the button is on top */
        }

        .btn-logout:hover {
            background-color: #0056b3;
        }
    </style>

</head>
<body>
    <div class="container">
        <h2>@ViewBag.Title</h2>
        <a href="@Url.Action("Login", "Home")" class="btn-logout">Logout</a>
        <button class="arrow-button prev-button" onclick="scrollRooms(-350)">&#10094;</button>
        <div class="room-slider">
            @for (var i = 1; i <= 6; i++)
            {
                <div class="room-card">
                    <div class="room-image">
                        <img src="~/Contents/img/1.jpg" alt="Room @i Image" class="room-image">
                    </div>
                    <div class="room-details">
                        <h3 class="room-title">Room @i</h3>
                        <p class="room-description">This is a description of Room @i.</p>
                        <p class="room-price">$@(400 + i * 100) per month</p>

                        <input type="checkbox" id="reserve-input-@i" class="reserve-input" />
                        <label for="reserve-input-@i" class="reserve-button">Reserve</label>

                        <form id="reservation-form-@i" class="reservation-form"
                              action="@Url.Action("Reserve", "Home")" method="post">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="RoomId" value="@i" />
                            <label for="username-@i">Your Username:</label>
                            <input type="text" id="username-@i" name="Username" required>
                            <label for="reserve-date-@i">Date of Reservation:</label>
                            <input type="date" id="reserve-date-@i" name="ReserveDate" required>
                            <input type="submit" value="Save" class="reserve-button">
                        </form>

                        <div class="status">Available</div>
                    </div>
                </div>
            }
        </div>
        <button class="arrow-button next-button" onclick="scrollRooms(350)">&#10095;</button>
    </div>

    <script>
    function scrollRooms(offset) {
        const roomSlider = document.querySelector('.room-slider');
        roomSlider.scrollLeft += offset;
    }
    </script>


</body>
</html>
