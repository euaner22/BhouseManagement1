@model housemanagement1.CustomerAccount

@{
    ViewBag.Title = "Create";
}

<style>
    body {
        background-image: url('../../Contents/img/hoho.jpg');
    }

    /* Button styling */
    .btn-home {
        margin: 10px ;
        left: 10px;
        top: 5px;
        padding: 10px 10px;
        background-color: #007bff;
        color: white;
        text-decoration: none;
        border-radius: 5px;
        transition: background-color 0.3s ease;
    }

        .btn-home:hover {
            background-color: #0056b3;
        }
</style>

<body>

    <section class="forms">
        <div class="container">
            <!-- logo -->
            @*lugo pohon*@
            <!-- //logo -->
            <a href="@Url.Action("Index", "Home")" class="btn-home">Home</a>
            <div class="forms-grid">

                <!-- Home button -->

                <!-- register -->
                <div class="register">
                    <span class="fas fa-user-circle"></span>
                    <strong>Create account!</strong>

                    @using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "register-form", id = "registerForm" }))
                    {
                        @Html.AntiForgeryToken()

                        <fieldset>
                            <div class="form">
                                <div class="form-row">
                                    <span class="fas fa-user"></span>
                                    <label class="form-label" for="Username">Username</label>
                                    @Html.EditorFor(model => model.username, new { htmlAttributes = new { @class = "form-text", @id = "Username" } })
                                    @Html.ValidationMessageFor(model => model.username, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-row">
                                    <span class="fas fa-lock"></span>
                                    <label class="form-label" for="Password">Password</label>
                                    @Html.PasswordFor(model => model.password, new { @class = "form-text", @id = "Password" })
                                    @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-row button-login">
                                    <button type="button" class="btn btn-login" onclick="validateForm()">Create <span class="fas fa-arrow-right"></span></button>
                                </div>
                            </div>
                        </fieldset>
                    }
                </div>
                <!-- //register -->
            </div>
        </div>
    </section>

    <script>
        function validateForm() {
            var username = document.getElementById("Username").value;
            var password = document.getElementById("Password").value;
            if (username.trim() === "" || password.trim() === "") {
                alert("Username and password are required.");
            } else {
                document.getElementById("registerForm").submit();
            }
        }
    </script>

</body>
